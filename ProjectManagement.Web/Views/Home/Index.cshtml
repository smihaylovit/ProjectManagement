<form id="initialize-db-form" method="post" class="row g-3 needs-validation" novalidate>
	<div class="col-12 text-center">
		<button id="initialize-db-btn" type="submit" class="btn btn-primary btn-lg">Initialize Database</button>
	</div>
	<div id="users-fromDate-filter" class="col-6 text-center">
		<label for="fromDate" class="form-label"><strong>Start Date</strong></label>
		<div class="input-group has-validation">
			<span class="input-group-text" id="fromDate-calendar-icon"><img class="calendar-icon" src="~/img/calendar.png" /></span>
			<input value="@ViewBag.FromDate" type="text" class="form-control" id="fromDate" name="fromDate" aria-describedby="fromDate-calendar-icon" autocomplete="off" maxlength="0" required>
			<div class="invalid-feedback">
				Please choose a start date.
			</div>
		</div>
	</div>
	<div id="users-toDate-filter" class="col-6 text-center">
		<label for="toDate" class="form-label"><strong>End Date</strong></label>
		<div class="input-group has-validation">
			<span class="input-group-text" id="toDate-calendar-icon"><img class="calendar-icon" src="~/img/calendar.png" /></span>
			<input value="@ViewBag.ToDate" type="text" class="form-control" id="toDate" name="toDate" aria-describedby="toDate-calendar-icon" autocomplete="off" maxlength="0" required>
			<div class="invalid-feedback">
				Please choose an end date.
			</div>
		</div>
	</div>
</form>
<div id="users-charts" class="row text-center">
	<strong class="no-database d-none">No database found. Please initialize database first.</strong>
	<strong class="no-data d-none">No data found. Try filtering for other dates range or populate data first.</strong>
	<div id="users-container" class="col-6 text-center">
		<img class="loader-icon" src="~/img/loader.gif" />
		<div id="users-table"></div>
		<div id="users-pagination-btns" class="btn-group" role="group"></div>
	</div>
	<div id="performance-container" class="col-6 text-center">
		<img class="loader-icon" src="~/img/loader.gif" />
		<div id="users-performance-chart"></div>
		<div id="projects-btns" class="btn-group" role="group"></div>
	</div>
</div>